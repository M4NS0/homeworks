<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="25dp"
        android:layout_marginTop="100dp"/>
    <EditText
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtnome"/>
    <TextView
        android:id="@+id/txtfrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pensamento do Dia"
        android:layout_below="@+id/nome"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/frase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtfrase"/>
    <TextView
        android:id="@+id/txtimagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caminho da Imagem"
        android:layout_below="@+id/frase"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtimagem"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/imagem"
        android:layout_marginTop="140dp"
        android:onClick="salvar"
        android:text="Salvar"
        android:background="#C6070D2E"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtnome"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>