<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaBuscar">

    <TextView
        android:id="@+id/textoSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca de contato na WEB"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/EdId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoSuperior"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Digite o ID do  Contato"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EdId"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="Buscar"/>

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/btnBuscar"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:text="Nome"
        android:textSize="25dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/txtNome"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:text="Telefone"
        android:textSize="25dp"
        android:textColor="@color/black"/>

    <include
        layout="@layout/layout_botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="15dp"
        />


</RelativeLayout>