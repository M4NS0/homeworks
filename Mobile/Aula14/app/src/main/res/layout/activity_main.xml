<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/wsquare2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mata Mosquito"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/linkingpark"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/texto"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/mosquito1"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito2"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito3"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito4"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito5"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito6"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito7"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/mosquito8"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:src="@drawable/mosquito"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iniciar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/red_blood"/>

    <TextView
        android:id="@+id/pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Pontos: 0"
        android:textColor="@color/red_blood"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Record: 0"
        android:textColor="@color/red_blood"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="8dp"/>


</RelativeLayout>