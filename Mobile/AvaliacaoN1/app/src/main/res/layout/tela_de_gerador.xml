<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telagerador"

    >
    <TextView
        android:id="@+id/resultadoGerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#D12F40"
        android:textFontWeight="700"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/btn_gerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultadoGerado"
        android:text="@string/gerarNumeros"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D12F40"
        android:textColor="#303030"
        />


</RelativeLayout>