<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404e7c">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragments e Sensors"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#BFBFBF"
        android:layout_centerHorizontal="true"
        />



        <TextView
            android:id="@+id/TextoLocal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Você está na fragment 1"
            android:layout_below="@+id/titulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnFrag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragment 1 "
            android:layout_below="@+id/TextoLocal1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnFrag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragment 2 "
            android:layout_below="@+id/btnFrag1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

</RelativeLayout>